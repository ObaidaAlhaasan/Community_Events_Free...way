extends ../../layouts/default
block head
    link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
    link(rel='stylesheet', href='/layouts/add_style.css?#{cacheBreaker}')

    title ADD Event


block body
    .container
        .row
            .col-xs-12.col-md-12
                .wrapper
                #formContent
                    h2 ADD  Event  it's  
                        small always easy ,
                    // Icon
                    .fadeIn.first
                    img#icon(src='https://maxcdn.icons8.com/app/uploads/2017/03/Party-1.png', alt='User Icon')
                    // Login Form
                    form(method = "post" , action="/events")
                        .row

                            .col-xs-6.col-md-6 
                                br
                                .form-group   
                                    label Event Name :    
                                    input#login.fadeIn.second(name='name',  type='text')
                            .col-xs-6.col-md-6
                                br
                                .form-group
                                    label  Venu Name  :
                                    input#login.fadeIn.third(name='venu', , type='text')         
                            .col-xs-12.col-md-12
                                .form-group                                             
                                    div.text-left  Event Description : 
                                    textarea#login(style="border:1px solid ",name="description", cols="10", rows="4").form-control

                            .col-xs-4.col-md-4
                                .form-group        
                                    label.text-left  Date :
                                    input#login.fadeIn.third(name='date', , type='date').form-control
                            .col-xs-4.col-md-4
                                .form-group                         
                                    label.text-left  Start Time :
                                    input#login.fadeIn.third(name='startTime', , type='time').form-control
                            .col-xs-4.col-md-4
                                .form-group 
                                    label.text-left  End Time :
                                    input#login.fadeIn.third(name='endTime', , type='time').form-control

                        input.fadeIn.fourth(value='Create Event', type='submit')
                    // Remind Passowrd
                    #formFooter
                    a.underlineHover(href='/events' style="text-decoration:none") Go Back?
